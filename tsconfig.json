{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "ES2017",
        "rootDir": ".",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "babel.config.js",
        "dist/**/*"
    ]
}