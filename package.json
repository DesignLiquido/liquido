{
	"name": "liquido",
	"description": "Conjunto de ferramentas para desenvolvimento de aplicações para a internet 100% em português",
	"version": "0.0.0",
	"author": "Leonel Sanches da Silva",
	"license": "MIT",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"empacotar": "rm -Rf ./dist && tsc && copyfiles -V ./README.md ./dist",
		"publicar-npm": "npm publish --access public",
		"verificadorDeCodigoTypescript": "npx tslint -c tslint.json 'infraestrutura/*.ts'  '*.ts' 'interfaces/*.ts'",
		"lint": "eslint . --ext .ts",
		"prettier-format": "prettier --config .prettierrc infraestrutura/*.ts interfaces/*.ts *.ts --write",
		"testes": "jest --runInBand",
		"testes:w": "jest --runInBand --watchAll"
	},
	"dependencies": {
		"@designliquido/lmht-js": "^0.1.0",
		"delegua": "^0.9.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.1",
		"handlebars": "^4.7.7",
		"nodemon": "^2.0.20"
	},
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.14",
		"@types/jest": "^29.2.3",
		"@types/node": "^18.7.18",
		"@typescript-eslint/eslint-plugin": "^5.44.0",
		"@typescript-eslint/parser": "^5.44.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.3.1",
		"prettier": "^2.8.0",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	}
}
